<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MacRadio" >

	<ProgressBar
	    android:id="@+id/progressBar1"
	    style="?android:attr/progressBarStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/macradio"
	    android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

    <ImageView
        android:id="@+id/macradio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="#ffffff"
        android:contentDescription="@string/student_radio_logo_description"
        android:src="@drawable/macradio" />

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/macradio"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/pause"
        android:background="@color/black_overlay"
        android:src="@drawable/pause_button" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pause_button"
        android:layout_alignTop="@+id/pause_button"
        android:contentDescription="@string/play"
        android:src="@drawable/play_button"
        android:background="@color/black_overlay" />

"

</RelativeLayout>